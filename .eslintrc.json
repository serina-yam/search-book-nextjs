//.eslintrc.json
{
  "extends": ["next/core-web-vitals", "prettier", "plugin:tailwindcss/recommended"],
  "ignorePatterns": [
    "*.config.js"
  ],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "sort-imports": "off",
    "import/order": ["error", { "alphabetize": { "order": "asc" } }],
    "import/no-named-as-default-member": "off"
  }
}
